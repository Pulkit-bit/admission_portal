<%- include('../links.ejs') %>
<%- include('../header.ejs') %>
<%- include('../videspart.ejs') %>


<h1 class="bg-info text-center mt-5">Course Display</h1>
<div class="container-fluid">
    <% if (msg.length > 0) { %>
        <div class="alert alert-success">
            <%= msg  %>
        </div>
    <%  }  %>
    <table class="table table-bordered text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Course</th>
                <th>Status</th>
                <th>Message</th>
                <th></th>
                <th></th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <!-- Iterating through the items in 'c' array -->
             <% c.forEach((item) => { %>
                <tr>
                    <td><%= item.id %></td>
                    <td><%= item.name %></td>
                    <td><%= item.email %></td>
                    <td><%= item.course %></td>
                    <td><%= item.status %></td>
                    <td><%= item.comment %></td>
                    <td>
                        <form action="/admin/updateStatus/<%= item.id %>" method="post"> 
                          <textarea name="comment" id=""></textarea>
                          
                      </td>
                      <td>
                        <button type="submit" class="btn btn-info text-white" name="status" value="Approved">Approved</button>
                        <button type="submit" class="btn btn-danger text-white" name="status" value="Rejected">Rejected</button>
                         </form>

                        
                      </td>
                    <td>
                        <a href="#" class="btn btn-info">Edit</a>
                        <a href="#" class="btn btn-success">View</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            <%}) %>
        </tbody>
    </table>
    
    <a href="/" class="btn btn-info">Back</a>
</div>

<%- include('../footer.ejs') %>
